<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_8"
    android:layout_marginTop="@dimen/spacing_24"
    android:layout_marginEnd="@dimen/spacing_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_multimedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/contentDescription_multimedia"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/ll_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_multimedia"
            android:layout_margin="@dimen/spacing_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_display_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:maxLines="1"
                android:text="@tools:sample/lorem/random"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/tv_mpaa_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:maxLines="1"
                android:text="@tools:sample/lorem"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightView"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_16"
                android:background="@color/silver" />

            <TextView
                android:id="@+id/tv_publication_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_size_16"
                tools:text="@tools:sample/date/ddmmyy" />

            <TextView
                android:id="@+id/tv_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_16"
                android:maxLines="2"
                android:text="@tools:sample/lorem/random"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_summary_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_16"
                android:maxLines="4"
                android:text="@tools:sample/lorem/random"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_read_more"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_base"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/spacing_24"
            android:layout_marginEnd="@dimen/spacing_24"
            android:background="@color/cv_light_background"
            android:text="@string/btn_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_24" />
    </RelativeLayout>
</android.support.v7.widget.CardView>